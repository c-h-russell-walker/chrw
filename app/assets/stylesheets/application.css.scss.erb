/**
 * Application stylesheet
 */
/* BASE STYLES */
* {
	padding: 0;
	margin: 0;
}
p {
	margin-bottom: 10px;
}
ul {
	padding: 0 20px 0 20px;
}
ul ul {
	margin-bottom: 0;
}
.hidden {
	display: none;
}
body {
	text-align: center;
	font-family: tahoma;
	font-size: small;
	background: #000;
	background-color: #000;
	color: #666;
}
a img {
	border: 0px;
}
a,
a:link,
a:visited {
	color: #666;
	text-decoration: none;
	outline: none;
}
a:hover {
	color: #C80000;
}
p a,
p a:link,
p a:visited {
	color: #C80000;
	text-decoration: none;
}
p a:hover {
	text-decoration: underline;
}
h3 a,
h3 a:link,
h3 a:visited {
	color: #C80000;
	text-decoration: none;
}
h3 a:hover,
h3 a:hover {
	text-decoration: underline;
}
h4 {
	font-size: 13px;
}
.separator {
	margin-bottom: 10px;
}
#main-text {
	clear: both;
	margin-right: 10px;
}
#allcontent {
	margin: auto;
	text-align: left;
	width: 80%;
	min-width: 500px;
	background: #000;
	position: relative;
}
#container {
	float: left;
	border-radius: 5px;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
	background: url(<%=asset_path "brick-texture-small.png"%>) repeat-y 0px 5%;
	border: 3px #fff solid;
	width: 100%;
	position: relative;
	line-height: 18px;
}
ul {
	padding-bottom: 20px;	
}
p {
	margin-bottom: 20px;
}
#page-index p {
	margin-bottom: 20px;
}
#top {
	height: 73px;
	position: relative;
	overflow: visible;
	border-bottom: 1px #666 solid;
	background-color: #864544;
	background-image: linear-gradient(left, #fff, #691917);
	background-image: -moz-linear-gradient(left, #fff, #691917);
	background-image: -webkit-gradient(linear, left center, right center,
																			color-stop(0, #fff),
																			color-stop(1, #691917));
}
#header-logo {
	background: url(<%=asset_path "cleanslaytlogo.png"%>) no-repeat !important;
	height: 73px;
	width: 73px;
	text-indent: -9999px;
	display: block;
}
#content{
	background: #fff;
	width: 95%;
	float: right;
}
#footer {
	clear: both;
	position: relative;
	height: 76px;
}
#footer a {
	color: #000;
}
#footer a:hover {
	color: #fff;
	text-shadow: 2px 2px 2px #C80000;
}
#footer ul li.last {
	border-right: none;
}
#footer .bottom-nav {
	background-color: #864544;
	background-image: linear-gradient(top, #fff, #691917);
	background-image: -moz-linear-gradient(top, #fff, #691917);
	background-image: -webkit-gradient(linear, left top, left bottom,
																			color-stop(0, #fff),
																			color-stop(1, #691917));
	padding-top: 18px;
	text-align: center;
	list-style: none;
}
#footer .bottom-nav li {
	display: inline;
	font-size: 1em;
	padding: 0 5px 0 3px;
	border-right: 2px solid #666;
}
#footer .bottom-icons {
	padding: 0;
	list-style: none;
	height: 20px;
}
#footer .bottom-icons a {
	float: right;
	margin-right: 20px;
	text-indent: -9999px;
	display: block;
	width: 40px;
	height: 40px;
	background: url(<%=asset_path "linkedin-icon-small.png"%>) no-repeat;
}
h1 {
	position: absolute;
	text-shadow: 1px 1px 1px #111;
	font-family: Georgia,"Times New Roman",Times,serif;
	font-size: 4em;
	top: 15px;
	height: 60px;
	line-height: 60px;
	width: 228px;
	left: 130px;
	color: #000;
}
#masthead {
	color: #000;
	display: block;
	height: 60px;
	line-height: 60px;
	width: 268px;
}
#masthead em { /* helps fix IE */
	line-height: 60px;
	width: 258px!important;
	height: 60px;
}
h2 {
	font-size: 140%;
	color: #999;
	margin: 0 0 10px 0;
}
h3 {
	margin-top: 15px;
	font-size: 130%;
	text-decoration: underline;
}
h4,
h5 {
	padding: 0px;
	margin: 2px;
	margin-bottom: 2px;
}
h4.intro {
	font-size: 110%;
}
.text-image {
	float: left;
	margin: 2px;
	padding: 5px;
	margin-right: 15px;
}
#top-nav {
	width: 100%;
	height: 47px;
	text-align: right;
}
#top-nav-content {
	float: right;
	margin: 5px;
}
.nav-item {
	float: left;
	text-align: center;
	width: 60px;
	position: relative;
}
.nav-item img {
	display: block;
	margin: auto;
	margin-bottom: 5px;
}
#top-nav-content .nav-item .nav-link {
	font-size: 7.5pt;
	font-weight: 900;
}
#top-nav-content a:hover img {
	position: relative;
	top: 5px;
}
#content-text {
	margin-left: 5%;
	margin-right: 5%;
}
/**** portfolio styles ***/
.images {
	margin: 0;
	padding: 0;
}
.images li {
	display: inline;
	float: left;
	list-style: none outside;
	padding: 5px;
}
.images li img {
	border: 2px solid #CCC;
	padding: 4px;
}
/**** resume styles *****/
#resume-header {
	margin: 0;
	height: 18px;
}
#page-resume .top-separator {
	height: 3px;
	margin-bottom: 20px;
}
#page-resume .bottom-separator {
	margin-top: -15px;
}
#resume-header a {
	display: block;
	width: 98px;
	background: url(<%=asset_path "pdf-icon.gif"%>) 80px 0 no-repeat;
}
#pdf-link a {
	display: block;
	padding-left: 30px;
	width: 75px;
	background: url(<%=asset_path "pdf-icon.gif"%>) no-repeat;
}
#allcontent .resume-entry {
	padding: 0 20px;
}